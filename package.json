{
  "name": "effect-sim",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:frontend dev:backend",
    "dev:frontend": "vite --open",
    "dev:backend": "convex dev --local",
    "hwir": "bun hardware-interface-runtime/index.tsx",
    "dev:ts": "tsgo -b -w",
    "dev:test": "vitest",
    "test": "vitest run",
    "test:types": "vitest typecheck --run shared/models",
    "typecheck": "tsgo -b --noEmit",
    "predev": "convex dev  --local --until-success && convex dashboard",
    "build": "tsgo -b && vite build",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview"
  },
